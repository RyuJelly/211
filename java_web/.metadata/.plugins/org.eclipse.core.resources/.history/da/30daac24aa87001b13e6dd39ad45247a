$(function() {
	$.ajax({
		url : 'server.jsp',
		type : 'post',
		dataType : 'json',
		data : $(this).serialize(),
		success : successHandler
	});
	return false;
	
	function successHandler(data){
		$.each(data, function(index, blog) {	
			$('div').empty();
			
			var html = '<div class="blog">';
			html += '<div class="title">tilte: ' + blog.title + '</div><br>';
			html += '<div class="writer">writer: ' + blog.writer + '</div><br>';
			html += '<div class="contents">contents: ' + blog.contents + '</div>';
			html += '</div>';
			
			$('#list').append(html);
		});
	}
});

$(function() {
	$('form').submit(function() {
		$.ajax({
			url : 'server.jsp',
			type : 'post',
			dataType : 'json',
			data : $(this).serialize(),
			success : function(data) {
				$.each(data, function(index, blog) {					
					var html = '<div class="blog">';
					html += '<span class="title">' + blog.title + '</span>';
					html += '<span class="writer">' + blog.writer + '</span>';
					html += '<div class="contents">' + blog.contents + '</div>';
					html += '</div>';
					
					$('#list').append(html);
				});
			}
		});
	});
});
