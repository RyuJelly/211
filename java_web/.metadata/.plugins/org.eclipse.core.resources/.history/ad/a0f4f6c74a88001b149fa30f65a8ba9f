$(function(){
	$('.quantity input').change(function(){
		
		var price = parseFloat($(this).parent().parent().find('.price').text().replace(/^[^\d.]/, ''));
		price = isNaN(price) ? 0 : price;
		alert(price)
		
		var quantity = $(this).val();
		quantity = isNan(quantity)? 0 : quantity;
		
		var cost = price * quantity;
		$(this).parent().parent().find('.cost').text('$'+cost.toFixed(2));					// toFixed(n) => 소수점 n자리까지만 나타냄
		
	});
});



