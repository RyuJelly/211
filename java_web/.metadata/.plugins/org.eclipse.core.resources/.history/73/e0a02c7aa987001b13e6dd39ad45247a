$(function() {
	$.ajax({
		url : 'server.jsp',
		type : 'post',
		dataType : 'json',
		data : $(this).serialize(),
		success : function(data) {
			$.each(data, function(index, blog) {
				$('div').empty();
				
				var html = '<div class="">';
				html += '<div class="title">' + blog.title + '</div>';
				html += '<div class="writer">' + blog.writer + '</div>';
				html += '<div class="contents">' + blog.contents + '</div>';
				html += '</div>';
				
				$('#list').append(html);
			});
		}
	});
	return false;
});

$(function() {
	$('form').submit(function() {
		$.ajax({
			url : 'server.jsp',
			type : 'post',
			dataType : 'json',
			data : $(this).serialize(),
			success : function(data) {
				$.each(data, function(index, blog) {
					$('div').empty();
					
					var html = '<div class="blog">';
					html += '<span class="title">' + blog.title + '</span>';
					html += '<span class="writer">' + blog.writer + '</span>';
					html += '<div class="contents">' + blog.contents + '</div>';
					html += '</div>';
					
					$('#list').append(html);
				});
			}
		});
	});
});
